<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".activity.layout.LayoutFirstActivity">

<!--    <include-->
<!--        layout="@layout/item_card"-->
<!--        app:layout_constraintDimensionRatio="200:9"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/seekBarProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_25"
        android:layout_marginBottom="@dimen/dimen_15"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="visible"
        app:indicatorColor="@color/brown_F05151"
        app:layout_constraintBottom_toTopOf="@+id/txtFrom"
        app:layout_constraintDimensionRatio="90:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:trackCornerRadius="3dp"
        tools:progress="50"
        app:trackThickness="6dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_3"
        android:alpha="0.7"
        android:gravity="center"
        android:text="@string/from"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_15"

        app:layout_constraintBottom_toTopOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_40"
        android:gravity="center"
        android:text="@string/ecomobile"
        android:textColor="@color/brown_F05151"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>