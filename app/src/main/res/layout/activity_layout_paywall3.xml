<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.designlayout.LayoutPaywallActivity3">

    <com.example.androidtutorial.widget.StatusBarView
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_subscription_package"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp"
        app:layout_constraintDimensionRatio="220:34"
        app:layout_constraintTop_toBottomOf="@+id/statusBarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idYearly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_6"
            android:fontFamily="@font/readexpro_regular"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="@string/yearly"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="@dimen/_13sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/readexpro_regular"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="@string/weekly"
            android:textAlignment="center"
            android:textColor="@color/white_EAF5F8"
            android:textSize="@dimen/_13sdp" />


    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_gravity="end"
        android:background="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_16sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtShrinkSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:fontFamily="@font/readexpro_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="0"
        android:lineSpacingMultiplier="1.0"
        android:text="@string/shrink_size_keep_quality"
        android:textAllCaps="true"
        android:textColor="@color/dark"
        android:textSize="@dimen/_27sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_22sdp"
        android:src="@drawable/hero_banner"
        app:layout_constraintDimensionRatio="360:284"
        app:layout_constraintTop_toBottomOf="@+id/txtShrinkSize" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="320:308"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_middle">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readexpro_regular"
            android:gravity="center"
            android:text="@string/after_free_trial_ends"
            android:textColor="@color/dark"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/bg_radius_12"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/readexpro_regular"
                android:text="@string/free_trial_enabled"
                android:textColor="@color/dark"
                android:textSize="@dimen/_13sdp" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchFreeTrial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:showText="false"
                android:padding="4dp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_radius_12"
            android:backgroundTint="@color/dark"
            android:paddingVertical="@dimen/_15sdp"
            android:text="@string/try_for_free"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_19sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:alpha="0.9"
            android:text="@string/by_continuing_you_agree_to_our_terms_and_privacy_policies"
            android:gravity="center"/>




    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>