<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20">

        <TextView
            android:id="@+id/txt_back_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/back_data"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_receive_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="@string/trang1"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_back_data" />

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:hint="@string/editText1"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_receive_data" />

        <ImageButton
            android:id="@+id/image_user"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen_20"
            android:contentDescription="@string/editText1"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_name"
            app:layout_constraintWidth_percent="0.25" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen_20"
            android:contentDescription="@string/takephoto"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_user"
            app:layout_constraintWidth_percent="0.35" />

        <Button
            android:id="@+id/btn_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/takephoto"
            app:layout_constraintEnd_toStartOf="@id/btn_web"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view" />

        <Button
            android:id="@+id/btn_web"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20"
            android:text="@string/transfer"
            app:layout_constraintEnd_toStartOf="@id/btn_camera"
            app:layout_constraintStart_toEndOf="@id/btn_image"
            app:layout_constraintTop_toTopOf="@id/btn_image" />

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_web"
            app:layout_constraintTop_toTopOf="@id/btn_image" />

        <Button
            android:id="@+id/btn_date_picker_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date_picker_dialog"
            app:layout_constraintEnd_toStartOf="@id/btn_dialog_time_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_image" />

        <Button
            android:id="@+id/btn_dialog_time_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date_time_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_date_picker_dialog"
            app:layout_constraintTop_toTopOf="@id/btn_date_picker_dialog" />

        <Button
            android:id="@+id/btn_dialog_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialogFragment"
            app:layout_constraintEnd_toStartOf="@id/btn_dialog_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_date_picker_dialog" />

        <Button
            android:id="@+id/btn_dialog_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/activityDialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_dialog_fragment"
            app:layout_constraintTop_toTopOf="@id/btn_dialog_fragment" />

        <Button
            android:id="@+id/btn_custom_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/customDialog"
            app:layout_constraintEnd_toStartOf="@id/btn_bottom_sheet_dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_dialog_fragment" />

        <Button
            android:id="@+id/btn_bottom_sheet_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bottomSheetDialog"
            app:layout_constraintEnd_toStartOf="@id/btn_alert_dialog"
            app:layout_constraintStart_toEndOf="@id/btn_custom_dialog"
            app:layout_constraintTop_toTopOf="@id/btn_custom_dialog" />

        <Button
            android:id="@+id/btn_alert_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_bottom_sheet_dialog"
            app:layout_constraintTop_toTopOf="@id/btn_custom_dialog" />

        <Button
            android:id="@+id/btn_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="@string/trang1"
            app:layout_constraintEnd_toStartOf="@id/btn_click3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_custom_dialog" />

        <Button
            android:id="@+id/btn_click3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/trang4"
            app:layout_constraintEnd_toStartOf="@id/btn_click4"
            app:layout_constraintStart_toEndOf="@id/btn_click"
            app:layout_constraintTop_toTopOf="@id/btn_click" />

        <Button
            android:id="@+id/btn_click4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/trang5"
            app:layout_constraintEnd_toStartOf="@id/btn_click2"
            app:layout_constraintStart_toEndOf="@id/btn_click3"
            app:layout_constraintTop_toTopOf="@id/btn_click" />

        <Button
            android:id="@+id/btn_click2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/trang3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_click4"
            app:layout_constraintTop_toTopOf="@id/btn_click" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
