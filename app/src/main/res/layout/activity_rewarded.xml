<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rewarded Ad"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coins hiện tại: 100"
            android:textSize="@dimen/_18sdp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem quảng cáo để nhận 100 coins"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnShowRewarded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/button_corners_16"
            android:text="Xem Quảng Cáo Rewarded"
            android:layout_marginBottom="@dimen/_16sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Sẵn sàng"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/grey"
            android:layout_marginBottom="32dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/comeBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/button_corners_16"
            android:text="Quay lại"
            android:layout_marginBottom="@dimen/_16sdp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>