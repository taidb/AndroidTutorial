<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_12"
    android:padding="@dimen/_12sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quảng cáo"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:background="@drawable/bg_radius_8"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <!-- VIDEO MEDIA VIEW -->
        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_below="@id/ad_label"
            android:layout_marginTop="@dimen/_8sdp"
            android:scaleType="fitCenter"
            android:contentDescription="Quảng cáo video" />

        <!-- Video Controls Overlay -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/video_controls"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignBottom="@id/ad_media"
            android:background="#80000000"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_12sdp"
            android:visibility="gone">

            <!-- Play/Pause Button -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_play_pause"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/icon_collection"
         />

            <!-- Video Progress Text -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_video_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Video quảng cáo"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_marginHorizontal="12dp" />

            <!-- Mute/Unmute Button -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_mute"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_collection"
                android:contentDescription="Tắt tiếng/Bật tiếng"
         />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Content Area -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_media"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- App Icon -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ad_icon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="@dimen/_8sdp"
                    app:srcCompat="@drawable/icon_collection"
                    android:contentDescription="Icon ứng dụng" />

                <!-- Text Content -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Headline -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ad_headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black_4D5A68"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Body -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ad_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black_4D5A68"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Advertiser -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ad_advertiser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/black_4D5A68"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Call to Action Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ad_call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="90dp"
                android:background="@drawable/bg_radius_12"
                android:textColor="@color/black_4D5A68"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:layout_marginStart="8dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Star Rating (optional) -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ad_stars_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_media"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_star1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_collection"
                android:layout_marginEnd="1dp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_star2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_collection"
                android:layout_marginEnd="1dp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_star3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_collection"
                android:layout_marginEnd="1dp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_star4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_collection"
                android:layout_marginEnd="1dp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_star5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_collection"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/grey_F0E8E9" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</com.google.android.gms.ads.nativead.NativeAdView>